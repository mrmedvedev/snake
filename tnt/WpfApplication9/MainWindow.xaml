<Window x:Class="WpfApplication8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Administration Console" Height="541.363" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="17" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Red" />
                    <Setter Property="FontSize" Value="17" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Foreground" Value="Yellow" />
                    <Setter Property="FontSize" Value="17" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,-8,-2" RenderTransformOrigin="0.5,0.5" Height="513" VerticalAlignment="Top">
        <Grid.Resources>
            <VisualBrush x:Key="LoginHint" Stretch="None" AlignmentX="Left" AlignmentY="Top" >
                <VisualBrush.Transform>
                    <TranslateTransform X="5" Y="7" />
                </VisualBrush.Transform>
                <VisualBrush.Visual>
                    <Grid HorizontalAlignment="Left">
                        <TextBlock FontFamily="SEGOEWP"  FontSize="17"   FontWeight="Normal"
                           HorizontalAlignment="Left" VerticalAlignment="Center"                                     Foreground="Gray" FontStyle="Italic" Opacity="1"                                          Text="ID or PC name"/>
                    </Grid>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Resources>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.055"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="waterMarkTextBox" FontSize="17" Width="153" Height="40" Grid.Column="1" 
        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,94,0,0" KeyDown="waterMarkTextBox_KeyDown">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=waterMarkTextBox,Path=Text}"                     Value="" >
                            <Setter Property="Background" Value="{StaticResource LoginHint}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Grid x:Name="RestartPanel" HorizontalAlignment="Stretch" Background="CadetBlue" Grid.ColumnSpan="2" Margin="0,0,10,447" >
            <Label Margin="30,30,131,10" VerticalAlignment="Center" Content="Run as Admin to use all features!"/>
            <Button Grid.Row="0" x:Name="RestartButton" Click="RestartButton_Click" HorizontalAlignment="Right" Margin="0,24,0,0" Width="86">
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="RestartButtonIcon" />
                    <Label Margin="0" Width="66" Content="Restart "/>
                </StackPanel>
            </Button>
        </Grid>
        <Button Content="Reboot PC" x:Name="ButtonUAC" HorizontalAlignment="Left" Margin="30,264,0,0" VerticalAlignment="Top" Width="91" Click="RebootPC_click" Grid.Column="1" Height="28"/>
        <Button Content="Unlock User" HorizontalAlignment="Left" Margin="30,315,0,0" VerticalAlignment="Top" Width="117" Click="UnlockUser_click" Grid.Column="1" Height="27"/>
        <Button Content="Lock PC" HorizontalAlignment="Left" Margin="30,201,0,0" VerticalAlignment="Top" Width="91" Click="LockPC_click" Grid.Column="1" Height="29"/>
        <Button Content="Ping" Grid.Column="1" HorizontalAlignment="Left" Margin="30,149,0,0" VerticalAlignment="Top" Width="88" Click="Ping_click" Height="29"/>
        <Menu Height="25" VerticalAlignment="Top" Margin="0,-1,10,0" Grid.ColumnSpan="2">
            <MenuItem Header="File">
                <Separator></Separator>
                <Button Content="Exit" FontSize="15" Margin="-29,0,-57,0" Click="Button_Click_1" />
            </MenuItem>
            <MenuItem Header="Edit">
                <Button Command="Cut" FontSize="15" Margin="-29,0,-57,0">Cut</Button>
                <Button Command="Copy" FontSize="15" Margin="-25,0,-55,0">Copy</Button>
                <Button Command="Paste" FontSize="15" Margin="-25,0,-55,0">Paste</Button>
            </MenuItem>
            <MenuItem Header="About" Click="MenuItem_Click_1" ></MenuItem>
        </Menu>
        <Button x:Name="button" Content="Ipconfig" Grid.Column="1" HorizontalAlignment="Left" Margin="30,380,0,0" VerticalAlignment="Top" Width="91" Click="Ipconfig_Click" Height="29"/>
        <TextBox x:Name="textBox" Grid.Column="1" Height="447" Margin="203,66,10,0" TextWrapping="Wrap" Text="" FontFamily="Lucida Console" VerticalAlignment="Top" />

    </Grid>

</Window>

    